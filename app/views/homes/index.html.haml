.home
  .header
    .headerInner
      = image_tag "logo.png", width: "200px", height: "150px", class: "headerImage"
      .searchForm
        = form_with(url: "#", local: true, method: :get, class: "form") do |f|
          = f.text_field :keyword, class: "input", placeholder: "キーワードから探す"
          = f.submit "検索", class: "search-btn"

  .Main
    .MainTitle
      .MainTitle__block
        %h1 MOTO
        %h1 LIFE
        %p.reason 旅に出る理由が
        %p.reason ここにある
    .menu
      %ul
        %li
          = link_to "sign up", "#", class: "menu__set"
        %li
          = link_to "login", "#", class: "menu__set"

